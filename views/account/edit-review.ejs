<section class="edit-review-page">
  <h1>Edit Review</h1>

  <form action="/review/update" method="POST" class="edit-review-form">
    <label for="review_text">Your review:</label>
    <textarea id="review_text" name="review_text" required minlength="3" maxlength="1000"><%= review.review_text %></textarea>

    <!-- Hidden field with review ID -->
    <input type="hidden" name="review_id" value="<%= review.review_id %>">

    <button type="submit">Update Review</button>
  </form>

  <a href="/account/" class="back-link">← Back to Account Management</a>
</section>

  